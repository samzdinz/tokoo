<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="312dp"
    android:background="@color/primary"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:text="@string/cari_barang_kamu_disini"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/ic_searched_24"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/primary_light"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="parent" />

  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/primary"
      android:src="@drawable/ic_shopping_cart_24"
      app:layout_constraintBottom_toBottomOf="@+id/button"
      app:layout_constraintStart_toEndOf="@+id/button"
      android:contentDescription="@string/keranjang"
 />

  <LinearLayout
      android:layout_width="310dp"
      android:layout_height="125dp"
      android:orientation="vertical"
      app:layout_constraintStart_toStartOf="@+id/button"
      app:layout_constraintTop_toBottomOf="@+id/button"
      android:background="@drawable/edit_signin_rad8"
      android:backgroundTint="@color/primary_dark"
      android:layout_marginTop="20dp"
      android:paddingStart="24dp"
      android:paddingTop="22dp"
      android:paddingBottom="19dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/hoodie_collection"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/latest_shoe_recommendations_which_is_being_hit_right_now"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:layout_marginTop="2dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_now"
        android:textSize="9sp"
        android:backgroundTint="@color/secondary"
        android:textColor="@color/black"/>

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>